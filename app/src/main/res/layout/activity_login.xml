<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/ver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="right|bottom"
            android:textColor="#999999"
            tools:text="ver 1.0.0.0"/>
    </LinearLayout>
    <LinearLayout
        tools:context=".LoginActivity"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="80dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/sb"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMBU MOBILE MES"
            android:textStyle="bold"
            android:id="@+id/button"
            android:textSize="32sp"
            android:textColor="#999999"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/uid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_square_gray"
            android:hint="사원번호"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/text_square_gray"
            android:hint="비밀번호"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword
"           android:maxLines="1"
            android:imeOptions="actionDone"
            android:selectAllOnFocus="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/autoid_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사원번호 저장"/>
            <CheckBox
                android:id="@+id/autopwd_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="비밀번호 저장"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/autologin_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자동로그인"
                android:layout_marginBottom="16dp"/>
            <CheckBox
                android:id="@+id/finger_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="지문인증 사용"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/login_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="로그인"/>
    </LinearLayout>
</FrameLayout>
